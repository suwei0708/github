/* pages/list/list.wxss */
.price {
    width: 510rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: #fff;
    margin: 20rpx auto 0;
    font-size: 20rpx;
    border-radius: 50rpx;
    text-align: center;
}
.form {
    display: block;
    margin: 20rpx auto 0;
    width: 575rpx;
    height: 68rpx;
    font-size: 0;
    background: #fff;
    border-radius: 68rpx;
}
.form .text {
    display: inline-block;
    vertical-align: top;
    width: 430rpx;
    height: 68rpx;
    line-height: 68rpx;
    padding-left: 47rpx;
    font-size: 24rpx;
    color: #999;
    border: 0;
}

.form .btn {
    display: inline-block;
    vertical-align: top;
    width: 98rpx;
    height: 68rpx;
    line-height: 68rpx;
    padding: 0;
    background: none;
    font-size: 26rpx;
    color: #fff;
}
.form .btn:after{ border: none; }
.form .btn image {
    display: block;
    width: 39rpx;
    height: 40rpx;
    margin: 15rpx 0 0 18rpx;
}

.list {
    padding: 10rpx 20rpx;
}
.list .li {
    position: relative;
    margin-top: 10rpx;
    padding: 30rpx 0 30rpx 18rpx;
    background: #fff;
    font-size: 0;
}
.list .img {
    display: inline-block;
    vertical-align: top;
    width: 160rpx;
    height: 160rpx;
}
.list .img image {
    width: 160rpx;
    height: 160rpx;
}
.list .info {
    display: inline-block;
    vertical-align: top;
    width: 395rpx;
    padding-left: 20rpx;
}
.list .title {
    font-size: 28rpx;
    font-weight: 700;
    height: 30rpx;
    line-height: 30rpx;
    margin-bottom: 6rpx;
}
.list .title image {
    display: inline-block;
    vertical-align: middle;
    width: 24rpx;
    height: 30rpx;
    margin: -3rpx 0 0 8rpx;
}
.list .p {
    line-height: 34rpx;
    font-size: 22rpx;
    color: #333;
}
.list .contact {
    display: inline-block;
    vertical-align: top;
    width: 116rpx;
}
.list .distance {
    text-align: center;
    line-height: 28rpx;
    color: #999;
    font-size: 20rpx;
}
.list .tel {
    margin-top: 15rpx;
    text-align: center;
    line-height: 28rpx;
    color: #999;
    font-size: 20rpx;
}
.list .tel image {
    width: 39rpx;
    height: 40rpx;
}
.list .func {
    padding-top: 48rpx;
    line-height: 30rpx;
    font-size: 22rpx;
}
.list .func .green {
    margin-left: 10rpx;
}
.list .tips {
    position: absolute;
    top: 10rpx;
    left: 0;
    width: 77rpx;
    height: 30rpx;
}