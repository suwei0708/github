/* pages/user/user.wxss */
.info {    
    margin-top: 26rpx;
    border-top: 1px solid #e3e3e7;
    border-bottom: 1px solid #e3e3e7;
    background: #fff;
    font-size: 0;
}
.info navigator {
    display: block;
    padding: 25rpx 26rpx;
}
.info .ecode {
    display: inline-block;
    vertical-align: middle;
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}
.info .arrow {
    display: inline-block;
    vertical-align: middle;
    width: 25rpx;
    height: 25rpx;
    margin-right: 4rpx;
}
.info .img {
    display: inline-block;
    vertical-align: middle;
    width: 116rpx;
    height: 116rpx;
    border-radius: 10rpx;
}
.info .text {
    display: inline-block;
    vertical-align: middle;
    width: 460rpx;
    margin: 0 20rpx;
}
.info .icon {
    display: inline-block;
    vertical-align: middle;
    width: 78rpx;
}
.info .name {
    display: block;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 32rpx;
    color: #333;
}
.info .slogan {
    display: block;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 26rpx;
    color: #333;
}

.list {
    margin-top: 35rpx;
    border-top: 1px solid #e3e3e7;
    border-bottom: 1px solid #e3e3e7;
    background: #fff;
    font-size: 0;
}
.list .li {
    position: relative;
    padding: 20rpx 0 21rpx 26rpx;
    
}
.list .li:after {
    content: '';
    position: absolute;
    left: 26rpx;
    bottom: 0;
    width: 100%;
    height: 1px;
    background: #e3e3e7;
}
.list .li:last-child {
    padding: 20rpx 0 20rpx 26rpx;
}
.list .li:last-child:after {
    height: 0;
}
.list .li .icon {
    display: inline-block;
    vertical-align: middle;
    width: 45rpx;
    height: 45rpx;
    margin-left: 10rpx;
}
.list .li .name {
    display: inline-block;
    vertical-align: middle;
    width: 560rpx;
    margin-left: 30rpx;
    font-size: 32rpx;
    color: #333;
}
.list .li .arrow {
    display: inline-block;
    vertical-align: middle;
    width: 25rpx;
    height: 25rpx;
    margin-left: 20rpx;
}